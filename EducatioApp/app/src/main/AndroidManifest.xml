<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jhon.educatioapp">
    <uses-permission   android:name = "android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Educatioapp.NoActionBar"
        tools:ignore="ExtraText">
        <activity
            android:name=".controllers.RegistroActivity"
            android:exported="false"
            android:label="@string/title_activity_registro"
            android:theme="@style/Theme.Educatioapp" />
        <activity
            android:name=".controllers.MainActivity"
            android:exported="true">
        </activity>
        <!-- LoginActivity como actividad de inicio -->
        <activity
            android:name=".controllers.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- MainActivity -->

    </application>

</manifest>